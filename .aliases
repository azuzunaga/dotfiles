#!/bin/bash

#### General Shortcuts ####

ali=/Users/az/.aliases
alias sl="ls"
alias ls='ls -F -h --color=always -v --author --time-style=long-iso -C "$@" --group-directories-first'
alias ll='ls -Al'
alias ldir="ls -dl .*/ */"
alias dirs="dirs -v"
alias irb="pry"
alias be="bundle exec"
alias cat="ccat -G Decimal="darkteal" -G Plaintext="darkgreen""
alias ber="bundle exec rspec"
alias u="cd ..; ll"
alias nd="cd -"
alias ali="vim $ali"
alias hist="history"
alias clear_history='echo "" > ~/.zsh_history & exec $SHELL -l'
alias sor="source ~/.zshrc"
alias spn="spotify next"
alias spv="spotify prev"
alias spp="spotify pause"
alias diff="diff --color"
# Make LESS display file contents inline if page size is only one screen
alias less="/usr/local/bin/smartless -N"
alias find="fd"
alias grep="rg -S"
alias chromedev="/Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome --user-data-dir=/tmp/chrome-debug &"

#### git variables ####
gs_message="\n\033[0;34m╭───────────────── git status ─────────────────╮\033[0m\n"

#### git shortcuts ####
alias gds="git diff --staged"
alias grao="git remote add origin"
alias gs='git status --short'

#### Daily Kos Aliases ####
alias rereact="kill -TERM %1; wait; bin/start &"
alias railspuma="bundle exec rails s puma -b 192.168.33.1 -p 3000 -c config.ru -e ${RAILS_ENV:-development}"
alias dkserv='railspuma &; ln -sf log logs && nginx -c $PWD/config/vm/nginx.dev.conf -p $PWD &'
alias lcserv="REACT_APP_ENV=local bin/start &"
alias chromedev="/Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome --user-data-dir=/tmp/chrome-debug &"
alias lc-deploy-staging="REACT_APP_ENV=production bin/build && AWS_DEFAULT_REGION=us-east-1 script/deploy staging"
alias lc-deploy-prod="REACT_APP_ENV=production bin/build && AWS_DEFAULT_REGION=us-west-2 script/deploy production"

